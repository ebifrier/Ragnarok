<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="titleStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="normalStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10.5" />
    </Style>
    
    <BitmapImage x:Key="iconSource"
                 UriSource="pack://application:,,,/Ragnarok.Presentation;component/Resources/icon.ico" />

    <Image x:Key="thumbImage"
           Source="pack://application:,,,/Ragnarok.Presentation;component/Resources/software_update_available.png"
           Stretch="None" VerticalAlignment="Top"
           Margin="10,10,5,10" />
</ResourceDictionary>
