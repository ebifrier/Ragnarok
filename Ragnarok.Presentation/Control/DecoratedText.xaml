<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:l="clr-namespace:Ragnarok.Presentation.Control">
    <ControlTemplate x:Key="decoratedText">
        <ContentControl Name="ChildPart"
                        Margin="0,2,0,2">        
        </ContentControl>
    </ControlTemplate>

    <Style TargetType="l:DecoratedText">
        <Setter Property="Template" Value="{StaticResource decoratedText}" />
    </Style>
</ResourceDictionary>
